@model razor_page_ex.Areas.UserPanel.Models.ChargeWalletViewModel
<div class="container">
    <nav aria-label="breadcrumb">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a asp-page="/Index"> صفحه اصلی </a></li>
            <li class="breadcrumb-item active" aria-current="page"> کیف پول </li>
        </ul>
    </nav>
</div>
<main>
<div class="container">
        <div class="user-account">
            <div class="row">
                <partial name="_PanelSideBar" />
                <div class="col-md-9 col-sm-8 col-xs-12">
                    <section class="user-account-content">
                        <header><h1> شارژ کیف پول  </h1></header>
                        <div class="inner form-layer">
                            <form asp-action="ChargeWallet" method="post">
                                <div class="row">
                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon" id="username"><i class="zmdi zmdi-balance-wallet"></i></span>
                                            <input type="number" asp-for="Amount" placeholder="مبلغ به تومان">
                                        </div>
                                    </div>
                              
                                    <div class="text-danger" asp-validation-summary="All"></div>
                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <button class="btn btn-success"> شارژ کیف پول </button>
                                    </div>
                                </div>
                            </form>
                            <hr/>
                          </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</main>
