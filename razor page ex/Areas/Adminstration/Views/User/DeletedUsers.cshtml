@model List<RazorEX.BAL.DTOs.UsersDTO.UserDTO>
@using RazorEX.BAL.Utilities
@{
    ViewData["title"] = "کاربران حذف شده";
}

    <section class="content-header">
    <h1>
        @ViewData["title"]
    </h1>
    <ol class="breadcrumb">
        <li><a asp-area="Adminstration" asp-controller="user" asp-action="Index"><i class="fa fa-dashboard"></i> خانه</a></li>
        <li class="active">@ViewData["title"]</li>
    </ol>
</section>
<section class="content">
    <div class="box box-danger">
        <div class="box-body">
        </div>
    </div>
    <a class="btn btn-success align-right" asp-page="/Register/SiguUp">Add User</a>
    <a class="btn btn-success align-right" asp-area="Adminstration" asp-controller="User" asp-action="DeletedUsers">کاربران حذف شده </a>
    <div class="box box-primary ">
        <div class="box-body p-0">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>آیدی</th>
                        <th>نام کاربری</th>
                        <th>رمز عبور</th>
                        <th>تاریخ ثبت نام </th>
                        <th>نقش</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.UserId</td>
                            <td>@item.UserName</td>
                            <td>@item.Password</td>
                            <td>@item.RegisterDate.ToPersianDate()</td>
                            <td>@item.Role</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>