@model RazorEX.BAL.DTOs.PostDTO.PostFilterDTO
@using RazorEX.BAL.Utilities

<body class=" bg-info" method="post">
    <div class="container">
        <h2 class="text-center text-succes h1 "></h2>
        <hr>
        <div class="box box-danger">
            <div class="box-body">
                <form>
                    <div class="box-header">
                        <button type="submit" class="btn btn-info pull-left">فیلتر </button>
                    </div>
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <input class="form-control" type="text" value="@Model.FilterParams.CategorySlug" placeholder="SlugCategory" name="CategorySlug" />
                        </div>
                        <div class="col-md-6 form-group">
                            <input class="form-control" type="text" value="@Model.FilterParams.Title" placeholder="عنوان" name="title" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <table class="table">
            <thead class="text-warning">
                <tr>
                    <th>عنوان</th>
                    <th>عکس</th>
                    <th>slug</th>
                    <th>گروه </th>
                    <th>عملبات</th>
                </tr>
            <tbody>
                @foreach (var item in Model.Posts)
                    {
                    <tr>
                        <td>@item.Title</td>
                        <td><img style="max-width: 150px" src="@Directories.GetPostImage(item.ImageName)" /></td>
                        <td>@item.Slug</td>
                        <td>@item.Category.Title</td>
                        <td><a asp-area="Adminstration" asp-controller="Post" asp-action="Edit" asp-route-id="@item.PostId" class="btn btn-info btn-sm">ویرایش</a></td>
                        <td><a asp-area="Adminstration" asp-controller="Post" asp-action="Delete" asp-route-Id="@item.PostId" class="btn btn-danger btn-sm">حذف</a></td>

                    </tr>
                    }
            </tbody>
        </table>
        <a class="btn btn-success align-right" asp-area="Adminstration" asp-controller="Category" asp-action="Add">Add Task</a>
        <br>
    </div>

    @if (Model.PageCount > 1)
    {
        <div class="box-footer">
            <div style="padding:10px">
                <ul class="pagination" style="display: inline-block">
                    @if (Model.FilterParams.PageId > 1)
                    {
                        <li class="paginate_button previous">
                            <a onclick="changePage(@(Model.FilterParams.PageId-1))" href="#">قبلی</a>
                        </li>
                    }
                    else
                    {

                        <li class="paginate_button previous disabled">
                            <a href="#">قبلی</a>
                        </li>
                    }

                    @for (var i = 1; i <= Model.PageCount; i++)
                    {
                        <li class="paginate_button @(i == Model.FilterParams.PageId ? "active" : null)">
                            <a onclick="changePage(@i)" href="javascript:void(0)">@i</a>
                        </li>
                    }
                    @if (Model.PageCount > Model.FilterParams.PageId)
                    {
                        <li class="paginate_button next">
                            <a onclick="changePage(@(Model.FilterParams.PageId+1))" href="#">بعدی</a>
                        </li>
                    }
                    else
                    {
                        <li class="paginate_button next disabled">
                            <a href="javascript:void(0)">بعدی</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    }


</body>








