@model List<RazorEX.BAL.DTOs.ProductDTOs.ProductDTO>
@using RazorEX.BAL.Utilities
@{
    ViewData["title"] = "محصولات حذف شده";
}

    <section class="content-header">
    <h1>
        @ViewData["title"]
    </h1>
    <ol class="breadcrumb">
        <li><a asp-area="Adminstration" asp-controller="product" asp-action="Index"><i class="fa fa-dashboard"></i> خانه</a></li>
        <li class="active">@ViewData["title"]</li>
    </ol>
</section>
<section class="content">
    <div class="box box-danger">
        <div class="box-body">
        </div>
    </div>
    <div class="box box-primary ">
        <div class="box-body p-0">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>عکس</th>
                        <th>عنوان</th>
                        <th>مدرس - فروشنده</th>
                        <th>قیمت</th>
                        <th>گروه</th>
                        <th>عملیات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <img style="max-width: 300px" src="@Directories.GetProductImage(item.ProductImageName)" />
                            </td>
                            <td>@item.Title</td>
                            <td>@item.Teacher</td>
                            <td>@item.Price.ToString("#,0 تومان")</td>
                            <td>@item.Category</td>
                            <td>
                            </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>