@model razor_page_ex.Areas.Adminstration.Models.CategoryM.EditCategoryViewModel

@{
    ViewData["title"] = "ویرایش دسته بندی";
    ViewData["selected"] = "category";

}
<section class="content-header">
    <h1>
        @ViewData["title"]
    </h1>
    <ol class="breadcrumb">
        <li><a asp-area="Adminstration" asp-controller="Home" asp-action="Index"><i class="fa fa-dashboard"></i> خانه</a></li>
        <li><a asp-area="Adminstration" asp-controller="Category" asp-action="Index">دسته بندی ها</a></li>
        <li class="active">@ViewData["title"]</li>
    </ol>
</section>
<section class="content">
    <form class="box box-danger" method="post" asp-area="Adminstration" asp-controller="Category" asp-action="Edit">
        <div class="box-body row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Title">عنوان</label>
                    <input asp-for="Title" class="form-control" value="@Model.Title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Slug">Slug</label>
                    <input asp-for="Slug" class="form-control" value="@Model.Slug" />
                    <span asp-validation-for="Slug" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="MetaDescription">MetaDescription</label>
                    <input asp-for="MetaDescription" class="form-control" value="@Model.MetaDescription" />
                    <span asp-validation-for="MetaDescription" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="MetaTag">MetaTag</label>
                    <input asp-for="MetaTag" class="form-control" value="@Model.MetaTag" />
                    <span asp-validation-for="MetaTag" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="box-footer">
            <button class="btn btn-success" type="submit">ثبت اطلاعات</button>
        </div>
    </form>
</section>



