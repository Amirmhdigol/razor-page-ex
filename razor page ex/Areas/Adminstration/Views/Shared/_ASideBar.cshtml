@{
    var selected = ViewData["selected"]?.ToString()?.ToLower();
}
<aside class="main-sidebar">
    <section class="sidebar">
        <ul class="sidebar-menu" data-widget="tree">
            <li class="@(selected=="index"?"active":null)">
                <a asp-area="Adminstration" asp-controller="Home" asp-action="Index">
                    <i class="fa fa fa-dashboard"></i> <span>داشبرد</span>
                </a>
            </li>
            <li class="@(selected=="users"?"active":null)">
                <a asp-area="Adminstration" asp-controller="User" asp-action="Index">
                    <i class="fa fa fa-dashboard"></i> <span>مدیریت کاربران</span>
                </a>
            </li>
            <li class="@(selected=="category"?"active":null)">
                <a asp-area="Adminstration" asp-controller="Category" asp-action="Index">
                    <i class="fa fa-th"></i> <span>دسته بندی ها</span>
                </a>
            </li>
            <li class="@(selected=="posts"?"active":null)">
                <a asp-area="Adminstration" asp-controller="Post" asp-action="Index">
                    <i class="fa fa-th"></i> <span>مدیریت مقالات</span>
                </a>
            </li>
        </ul>
    </section>
</aside>