                                        <input type="text" asp-for="UserName" class="form-control form-control-lg" />
                                        <span asp-validation-for="UserName" class="text-white"></span>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <label class="form-label" for="form3Example4cg">رمز عبور</label>
                                        <input type="password" asp-for="Password" class="form-control form-control-lg" />
                                        <span asp-validation-for="Password" class="text-white"></span>
                                    </div>

                                    @if (Model.IsActive)
                                    {
                                        <input type="hidden" asp-for="IsActive" value="true" />

                                    }
                                    <input type="hidden" asp-for="IsActive" value="false" />

                                    <div class="form-check d-flex justify-content-center mb-5">
                                        <input class="form-check-input me-2"
                                               type="checkbox"
                                               value=""
                                               id="form2Example3cg" />
