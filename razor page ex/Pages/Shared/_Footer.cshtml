 @model Tuple<List<ProductDTO>, List<PostDTO>>
 @{
    var item11 = Model.Item1;
    var item2 = Model.Item2;
}
@using RazorEX.BAL.DTOs.PostDTO
@using RazorEX.BAL.DTOs.ProductDTOs
@using RazorEX.BAL.Utilities
<footer class="footer footer--light">
    <div class="container">
        <div class="footer__widgets">
            <div class="row">
                <div class="col-lg-4 col-md-4">
                    <aside class="widget widget-logo">
                        <a>
                        </a>

                        @{
                            var counter = 0;
                        }
                        <h4 class="widget-title">محبوب ترین محصولات</h4>
                        <ul>
                            @foreach (var item1 in item2)
                            {

                                if (counter == 2)
                                {
                                    break;
                                }
                                <li class="post-list-small__item">
                                    <article class="post-list-small__entry clearfix">
                                        <div class="post-list-small__img-holder">
                                            <div class="thumb-container thumb-100">
                                                <a asp-page="SingleProduct" asp-route-Title="@item1.Title">
                                                    <img data-src="@Directories.GetPostImage(item1.ImageName)" src="img/empty.png" alt="" class="post-list-small__img--rounded lazyload">
                                                </a>
                                            </div>
                                        </div>
                                        <div class="post-list-small__body">
                                            <h3 class="post-list-small__entry-title">
                                                <a asp-page="Post" asp-route-CategorySlug="@item1.Category.Slug">@item1.Title</a>
                                            </h3>
                                            <ul class="entry__meta">
                                                <li class="entry__meta-author">
                                                    <span>نویسنده:</span>
                                                    <a href="#">@item1.UserName</a>
                                                </li>
                                                <li class="entry__meta-date">
                                                    @item1.CreationDate.ToPersianDate()
                                                </li>
                                            </ul>
                                        </div>
                                    </article>
                                </li>

                                counter++;
                            }
                        </ul>
                    </aside>
                </div>
                <div class="col-lg-4 col-md-4">
                    <aside class="widget widget-popular-posts">
                        <h4 class="widget-title">محبوب ترین مقالات</h4>
                        <ul class="post-list-small">
                            @{
                                counter = 0;
                            }

                            @foreach (var item in item11)
                            {

                                if (counter == 2)
                                {
                                    break;
                                }
                                <li class="post-list-small__item">
                                    <article class="post-list-small__entry clearfix">
                                        <div class="post-list-small__img-holder">
                                            <div class="thumb-container thumb-100">
                                                <a asp-page="SingleProduct" asp-route-Title="@item.Title">
                                                    <img data-src="@Directories.GetProductImage(item.ProductImageName)" src="img/empty.png" alt="" class="post-list-small__img--rounded lazyload">
                                                </a>
                                            </div>
                                        </div>
                                        <div class="post-list-small__body">
                                            <h3 class="post-list-small__entry-title">
                                                <a asp-page="SingleProduct" asp-route-Title="@item.Title">@item.Title</a>
                                            </h3>
                                            <ul class="entry__meta">
                                                <li class="entry__meta-author">
                                                    <span>نویسنده:</span>
                                                    <a href="#">@item.Teacher</a>
                                                </li>
                                                <li class="entry__meta-date">
                                                    @item.CreationDate.ToPersianDate()
                                                </li>
                                            </ul>
                                        </div>
                                    </article>
                                </li>
                                counter++;
                            }
                        </ul>
                    </aside>
                    @*                    <div class="col-lg-4 col-md-4">
                        <aside class="widget widget-popular-posts">
                        <ul class="post-list-small">
                        <li>                        <p class="copyright">
                        استفاده از مطالب این سایت برای مقاصد غیرتجاری با ذکر نام این سایت و لینک به منبع بلامانع است. حقوق این سایت به شرکت امیرمهدی تعلق دارد.
                        </p>
                        </li>
                        </ul>
                        </aside>
                        </div>
                    *@
                </div>
            </div>
        </div>
    </div>
</footer> 