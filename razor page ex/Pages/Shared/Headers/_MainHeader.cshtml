
@model List<RazorEX.BAL.DTOs.CategoryDTO.CategoryDto>
@{
    if (User.Identity.IsAuthenticated)
    {
        ViewData["UserName"] =  $"پنل کاربری {User.Identity.Name}";
    }
}

<header class="nav">
    <div class="nav__holder nav--sticky">
        <div class="container relative">
            <div class="flex-parent">
                <button class="nav-icon-toggle" id="nav-icon-toggle" aria-label="Open side menu">
                    <span class="nav-icon-toggle__box">
                        <span class="nav-icon-toggle__inner"></span>
                    </span>
                </button>
                <a href="" class="logo">
                </a>
                <nav class="flex-child nav__wrap d-none d-lg-block">
                    <ul class="nav__menu">
                        <li>
                            <a href="index.html"> اصلی</a>
                        </li>
                        @foreach (var ThisCategory in Model.Where(a => a.ParentId == null))
                        {
                            if (Model.Any(p => p.ParentId == ThisCategory.Id))
                            {
                                <li class="nav__dropdown">
                                    <a asp-page="SearchPage" asp-route-CategorySlug="@ThisCategory.Slug">@ThisCategory.Title</a>
                                    <ul class="nav__dropdown-menu">
                                        @foreach (var child in Model.Where(p => p.ParentId == ThisCategory.Id))
                                        {
                                            <li><a asp-page="SearchPage" asp-route-CategorySlug="@ThisCategory.Slug">@child.Title</a></li>
                                        }
                                    </ul>
                                </li>
                            }
                            else
                            {
                                <li>
                                    <a asp-page="SearchPage" asp-route-CategorySlug="@ThisCategory.Slug">@ThisCategory.Title</a>
                                </li>
                            }
                        }
                    </ul> <!-- end menu -->
                </nav> <!-- end nav-wrap -->
                <div class="nav__right">
                    <div class="nav__right-item nav__search">
                        <a href="#" class="nav__search-trigger" id="nav__search-trigger">
                            <i class="ui-search nav__search-trigger-icon"></i>
                        </a>
                        <div class="nav__search-box" id="nav__search-box">
                            <form action="/SearchPage" class="nav__search-form">
                                <input type="text" name="q" placeholder="جستجو مقالات" class="nav__search-input">
                                <button type="submit" class="search-button btn btn-lg btn-color btn-button">
                                    <i class="ui-search nav__search-icon"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
                        <a asp-area="Userpanel" asp-controller="userpanel" asp-action="index" style="margin-top:10px;margin-right:10px;color:dodgerblue" >@ViewData["UserName"]</a>
            </div> <!-- end flex-parent -->
        </div> <!-- end container -->
    </div>
</header> 